
<section>
    <div class="container">
        

        <div class="">  
            <a href="/admin/add-banner" class="btn btn-secondary ml-auto mt-5" >Add Banner</a>  
        </div>
        <table class="table mt-5 " id="productView">
            <thead>
                <tr>
                    {{!-- <th>NO</th> --}}
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Banner</th>
                    
                    
                    
                       
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.Name}}</td>
                    <td scope="row"><img src="/product-images/{{this._id}}.jpg" style="height: 60px" alt=""></td>
                    <td scope="row"><img src="/product-images1/{{this._id}}.jpg" style="height: 60px" alt=""></td>
                    <td scope="row"><img src="/product-images2/{{this._id}}.jpg" style="height: 60px" alt=""></td>
                    <td scope="row"><img src="/product-images3/{{this._id}}.jpg" style="height: 60px" alt=""></td>
                    
              
                    <td>
                        {{!-- <a href="/admin/edit-stock?id={{this._id}}" class="btn btn-secondary py-1 my-1">Edit &nbsp;&nbsp;&nbsp;</a>  --}}
                        <a href="/admin/delete-banner/{{this._id}}" class="btn btn-dark py-1 " onclick="return confirm('Are you wanted to delete this {{this.Name}} ?')">Delete</a></td>

                </tr>
                {{/each}}


            </tbody>
        </table>
    </div>
</section>

<script>
    $( function () {
    $('#productView').DataTable();
} );
</script>